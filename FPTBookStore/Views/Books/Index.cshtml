@model IEnumerable<FPTBookStore.Models.Book>

@{ ViewBag.Title = "Index"; }

<div class="search-bar">
    <form method="get">
        <div class="input-group">
            <input type="text" class="form-control" name="search" placeholder="Search for..." value="@ViewBag.Search">
            <div class="input-group-btn">
                <input class="btn btn-success" type="submit" value="Search">
            </div>
        </div>

    </form>
</div>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CoverUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockedQuantity)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        <img src="~/Content/Images/Books/@Html.DisplayFor(modelItem => item.CoverUrl)" alt="@Html.DisplayFor(modelItem => item.Name)'s Cover" width="60" height="90" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Author)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Category.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StockedQuantity)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
    </td>
</tr>}

</table>

